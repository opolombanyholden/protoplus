    <style>
        body{
            font-family:Verdana, Geneva, Arial, Helvetica, sans-serif;
            font-size:12px;
        }
        .accordion{
            width:200px;
            border-bottom:1px solid #ccc;
        }
        .accordion .panel{
            border:1px solid #ccc;
            border-bottom:none;
            background:#f5f5f5;
            overflow:hidden;
            height:20px;
            
        }
        .accordion .panel .content{
            padding:5px;
        }
        .accordion .panel .title{
            font-size:14px;
            font-weight:bold;
            border-bottom:1px solid #ccc;
            background:#ddd;
            height:20px;
        }
    </style>
    <script>
        document.ready(function(){
            var current = false;
            var timer = false;
            $$(".accordion .panel").each(function(panel){
                panel.undoClipping().setStyle({height:"auto"});
                var h = panel.getHeight();
                panel.makeClipping().setStyle({height:"20px"});
                panel.select(".title")[0].observe("mouseover", function(){
                    if(timer){
                        clearTimeout(timer);
                    }
                    timer = setTimeout(function(){
                        if(current){
                            current.shift({height:20, background:"#f5f5f5", duration:0.5, easing:'quadOut'});
                        }
                        panel.shift({height:h, background:"#FFFFE0", duration:0.5, easing:'quadOut'});
                        current = panel;
                    }, 100)
                })
            })
        })
    </script>
